# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
.env text eol=lf
.env.example text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.bin binary
*.wav binary
*.ico binary
*.png binary
